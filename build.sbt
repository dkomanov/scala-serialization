  .dependsOn(`scala-serialization`)
  .enablePlugins(JmhPlugin)
  .settings(commonSettings: _*)
  .settings(
    libraryDependencies ++= Seq(
      "pl.project13.scala" % "sbt-jmh-extras" % "0.3.3"
    )
  )
